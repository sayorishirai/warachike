<%= render 'user/header-out' %>

<div class="container">
  <div class="col-md-8 col-md-offset-2">

    <div class="red-underline">新規会員登録</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="devise-box">

        <div class="red-underline2">
          <div class="field">
            <div class="device-txt"><%= f.label :お名前： %></div>
            <%= f.text_field :name, class: "field-box", autofocus: true, autocomplete: "name" %>
          </div>
        </div><!-- .red-underline2 -->

        <div class="red-underline2">
          <div class="field">
            <div class="device-txt"><%= f.label :フリガナ： %></div>
            <%= f.text_field :name_phonetic, class: "field-box", autofocus: true, autocomplete: "name_phonetic" %>
          </div>
        </div><!-- .red-underline2 -->

        <div class="red-underline2">
          <div class="field">
            <div class="device-txt"><%= f.label :電話番号： %></div>
            <%= f.text_field :phone_number, class: "field-box", autofocus: true, autocomplete: "phone_number" %>
          </div>
        </div><!-- .red-underline2 -->

        <div class="red-underline2">
          <div class="field">
            <div class="device-txt"><%= f.label :email %></div>
            <%= f.text_field :email, class: "field-box", autofocus: true, autocomplete: "email" %>
          </div>
        </div><!-- .red-underline2 -->

        <div class="red-underline2">
          <div class="field">
            <div><%= f.label :パスワード： %></div>
            <div class="device-txt"><%= f.password_field :password, autocomplete: "off" %></div>
            <% if @minimum_password_length %>
            <em>パスワードは<%= @minimum_password_length %>文字以上</em>
            <% end %>
          </div>
        </div><!-- .red-underline2 -->

        <div class="red-underline2">
          <div class="field">
            <div><%= f.label :もう一度パスワードを入力してください %></div>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div><!-- .red-underline2 -->

      </div>

      <div class="actions">
        <%= f.submit "登録する" %>
      </div>

    <% end %>

  </div><!-- /col-md-8 col-md-offset-2 -->
</div><!-- /container -->

<%= render 'user/footer' %>
